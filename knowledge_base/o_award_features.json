  "common_error_patterns": {
    "abstract_errors": {
      "category": "摘要常见错误",
      "severity": "critical",
      "errors": [
        {
          "error": "陈词滥调开头",
          "description": "使用'With the development of...'等陈词滥调开头",
          "impact": "评委第一印象差，可能直接降级",
          "solution": "使用数据冲击钩子或问题重要性钩子"
        },
        {
          "error": "缺少量化结果",
          "description": "摘要中没有具体数字，只有定性描述",
          "impact": "无法展示工作的具体价值",
          "solution": "至少包含4个具体数字"
        },
        {
          "error": "结构不完整",
          "description": "缺少方法、结果或结论部分",
          "impact": "评委无法快速了解全文",
          "solution": "确保6个结构元素齐全"
        },
        {
          "error": "词数不符",
          "description": "少于300词或多于500词",
          "impact": "违反格式要求",
          "solution": "严格控制在300-500词"
        },
        {
          "error": "缺少关键词",
          "description": "没有关键词或关键词不相关",
          "impact": "影响论文检索和分类",
          "solution": "提供5-7个相关关键词"
        }
      ]
    },
    "model_errors": {
      "category": "模型常见错误",
      "severity": "high",
      "errors": [
        {
          "error": "模型堆砌",
          "description": "使用过多模型而无明确理由",
          "impact": "显得不成熟，缺乏深度",
          "solution": "选择最适合的1-2个模型并深入"
        },
        {
          "error": "缺乏模型选择论证",
          "description": "直接使用模型而不解释为什么",
          "impact": "评委质疑选择合理性",
          "solution": "与备选方法对比并量化说明"
        },
        {
          "error": "假设无论证",
          "description": "列出假设但不解释合理性",
          "impact": "假设可信度低",
          "solution": "每个假设都需要论证"
        },
        {
          "error": "数学推导错误",
          "description": "公式推导有逻辑或计算错误",
          "impact": "严重影响可信度",
          "solution": "仔细验证所有推导步骤"
        },
        {
          "error": "变量未定义",
          "description": "使用符号但未在前文定义",
          "impact": "读者困惑",
          "solution": "在符号表或首次出现时定义"
        }
      ]
    },
    "validation_errors": {
      "category": "验证常见错误",
      "severity": "high",
      "errors": [
        {
          "error": "缺乏敏感性分析",
          "description": "没有进行参数敏感性分析",
          "impact": "无法证明模型鲁棒性",
          "solution": "至少进行Sobol全局敏感性分析"
        },
        {
          "error": "仅报告单一指标",
          "description": "只报告一种误差指标",
          "impact": "验证不充分",
          "solution": "报告3-5种误差指标"
        },
        {
          "error": "无基准对比",
          "description": "未与现有方法对比",
          "impact": "无法证明方法优势",
          "solution": "与至少2种基准方法对比"
        },
        {
          "error": "缺乏统计显著性",
          "description": "未进行统计检验",
          "impact": "结果可信度低",
          "solution": "使用配对t检验等方法"
        }
      ]
    },
    "writing_errors": {
      "category": "写作常见错误",
      "severity": "medium",
      "errors": [
        {
          "error": "中式英语",
          "description": "使用不地道的英语表达",
          "impact": "影响可读性和专业性",
          "solution": "参考中式英语检测器进行修正"
        },
        {
          "error": "时态不一致",
          "description": "同一段落混用多种时态",
          "impact": "阅读困难",
          "solution": "方法用现在时，实验用过去时"
        },
        {
          "error": "术语不一致",
          "description": "同一概念使用不同术语",
          "impact": "读者困惑",
          "solution": "使用一致性检查器验证"
        },
        {
          "error": "图表引用缺失",
          "description": "图表未在正文中引用",
          "impact": "图表成为孤立内容",
          "solution": "每个图表必须在正文引用"
        },
        {
          "error": "引用格式不统一",
          "description": "混用不同引用格式",
          "impact": "不专业",
          "solution": "统一使用一种引用格式"
        }
      ]
    },
    "visualization_errors": {
      "category": "可视化常见错误",
      "severity": "medium",
      "errors": [
        {
          "error": "分辨率不足",
          "description": "图表模糊不清",
          "impact": "难以阅读",
          "solution": "使用300+ DPI"
        },
        {
          "error": "缺少坐标轴标签",
          "description": "图表没有标注坐标轴",
          "impact": "无法理解图表含义",
          "solution": "标注所有轴标签和单位"
        },
        {
          "error": "颜色不友好",
          "description": "使用红绿配色",
          "impact": "色盲人群无法区分",
          "solution": "使用色盲友好配色"
        },
        {
          "error": "图表过度装饰",
          "description": "使用3D效果、阴影等",
          "impact": "干扰信息传达",
          "solution": "简洁清晰的2D图表"
        }
      ]
    }
  },
  
